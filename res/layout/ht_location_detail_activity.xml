<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ht_location_detail_location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hanoi, Vietnam"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/ht_location_detail_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="37 ngo 157 Phao Dai Lang, Dong Da, Hanoi, Vietnam" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ht_location_detail_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20o"
            android:textSize="80dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ht_location_detail_weather_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp" />

            <TextView
                android:id="@+id/ht_location_detail_low_high_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13o 20o"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/ht_location_detail_weather_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Showers
Humidity = 100%
Wind: 100mph"
        android:textSize="15dp" />

</LinearLayout>