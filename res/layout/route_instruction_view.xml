<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/route_instruction_view_instruction_linear_layout"
        android:layout_alignTop="@id/route_instruction_view_instruction_linear_layout"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/route_instruction_view_prev_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:enabled="false"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:text="&lt;" />

        <Button
            android:id="@+id/route_instruction_view_next_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:enabled="false"
            android:gravity="right|center_vertical"
            android:padding="5dp"
            android:text=">" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/route_instruction_view_instruction_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/route_instruction_view_instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/route_instruction_view_length_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>