<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#000000" >
    
    <Button
        android:id="@+id/pin_annotation_view_direction_button"
        android:text="D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <LinearLayout
        android:id="@+id/pin_annotation_view_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dropped Pin" />
        <TextView
            android:id="@+id/pin_annotation_view_detail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hanoi, HN 10000, Vietnam" />
    </LinearLayout>

</LinearLayout>